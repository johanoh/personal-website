<turbo-frame id="content">
  <div data-controller="contact">
    <h1 class="contact-container">Contact Me</h1>
    <div class="contact-container">
      <%= form_with url: "/contact", method: :post, data: { turbo_frame: "contact_form", action: "turbo:submit-end->contact#handleSubmitEnd" }, class: "contact-form" do |f| %>
        <div class="form-group">
          <label for="name">Name</label>
          <%= f.text_field :name, required: true %>
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <%= f.email_field :email, required: true %>
        </div>

        <div class="form-group">
          <label for="message">Message</label>
          <%= f.text_area :message, rows: 5, required: true %>
        </div>

        <button type="submit" class="btn">Send</button>
      <% end %>

      <!-- This is where the error message will appear -->
    </div>
    <div id="contact_form_status" class="contact-container" data-contact-target="status"></div>
  </div>
</turbo-frame>
